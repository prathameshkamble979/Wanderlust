<% layout('/layouts/boilerplate') -%>

 <style>
    #filters {
        display: flex;
        gap: 1rem;
        margin-top: 1rem;
    }
    .filter {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 0.5rem 1rem;
        border: 1px solid #ccc;
        border-radius: 8px;
        cursor: pointer;
        transition: background-color 0.3s, box-shadow 0.3s;
    }
    .filter:hover {
        background-color: #f0f0f0;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    .filter i {
        font-size: 1.0rem;
        margin-bottom: 0.5rem;
        /* color: #ff5722; */
    }
    .filter p {
        margin: 0;
        font-weight: bold;
        color: #333;
        font-size: 0.6rem;
    }
    .tax-info {
      display: none;
    }
    .tax-toggle {
      border: 1px solid black;
      border-radius: 1rem;
      height: 3.2rem;
      padding: 1rem;
      margin-left: auto;
      display: flex;
      align-items: center;
    }

 </style>
   
   <div id="filters">
    <div class="filter">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Treanding</p> 
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p> 
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-mountain-city"></i></div>
        <p>Iconoic City</p> 
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-mountain-sun"></i></div>
        <p>Mountains</p> 
    </div>
    <div class="filter">
        <div><i class="fa-brands fa-fort-awesome"></i></div>
        <p>castles</p> 
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>Amazing Pools</p> 
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-campground"></i></div>
        <p>Camping</p> 
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-cow"></i></div>
        <p>Farms</p> 
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-snowman"></i></div>
        <p>Arctic</p> 
    </div>

    <div class="tax-toggle">
      <div class="form-check-reverse form-switch">
        <input 
        class="form-check-input" 
        type="checkbox" 
        id="taxToggle">
        <label class="form-check-label" for="taxToggle">Display total after Taxes</label>
      </div>
    </div>
   </div>

  <div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1 mt-3">
    <% for(let listing of allListings) { %>
      <a href="/listings/<%= listing._id %>" class="listing-link">
    <div class="col mb-4">
      <div class="card h-100 listing-card">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top"
          alt="listing_image"
          style="height: 20rem; object-fit: cover"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %> </b> <br />
            &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
            <i class="tax-info">&nbsp; &nbsp;+18% GST</i>
          </p>
        </div>
      </div>
    </div>
    </a>
    <% } %>
  </div>

  <script>
    let taxSwitch = document.getElementById('taxToggle');
    taxSwitch.addEventListener('change', function() { 
      let taxInfoElements = document.querySelectorAll('.tax-info');
      if(this.checked) {
        taxInfoElements.forEach(el => el.style.display = 'inline');
      } else {
        taxInfoElements.forEach(el => el.style.display = 'none');
      }
    });
  </script>